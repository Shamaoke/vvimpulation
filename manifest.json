{
    "manifest_version": 2,
    "name": "VVimpulation",
    "version": "0.1",

    "permissions": [
        "clipboardRead",
        "clipboardWrite",
        "downloads",
        "history",
        "notifications",
        "sessions",
        "storage",
        "tabs",
        "<all_urls>"
    ],

    "background": {
        "scripts": [
            "common/utils.js",
            "common/port.js",
            "background/default_options.js",
            "background/command.js",
            "background/wimpulation.js"
        ]
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "common/utils.js",
                "common/dom_utils.js",
                "common/scroll.js",
                "common/port.js",
                "content_scripts/command.js",
                "content_scripts/frontend_command.js",
                "content_scripts/frame_info.js",
                "content_scripts/insert_mode.js",
                "content_scripts/hint_mode.js",
                "content_scripts/visual_mode.js",
                "content_scripts/console_mode.js",
                "content_scripts/wimpulation.js"
            ],
            "css": ["content_scripts/wimpulation.css"],
            "match_about_blank": true,
            "all_frames": true,
            "run_at": "document_start"
        }
    ],

    "options_ui": {
        "page": "options/options.html",
        "browser_style": false,
        "open_in_tab": true
    },

    "web_accessible_resources": [
        "resources/ex_mode/ex_mode.html",
        "resources/hint_pattern.json"
    ]
}
